<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <fragment
            android:id="@+id/map"
            class="com.google.android.gms.maps.SupportMapFragment"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true" android:layout_marginBottom="0dp"/>

    <Button
            android:id="@+id/choose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedbutton"
            android:padding="8dp"
            android:textColor="#000000" android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginBottom="5dp" android:text="choose" android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true" android:layout_marginRight="1dp" android:layout_marginEnd="1dp"
            android:layout_marginTop="0dp" android:layout_alignParentTop="true"/>
    <Button
            android:id="@+id/back"
            android:layout_width="88dp"
            android:layout_height="wrap_content"
            android:background="@drawable/roundedbutton"
            android:padding="8dp"
            android:textColor="#000000"
            android:text="back"
            android:layout_alignTop="@+id/back" android:layout_marginTop="0dp"
            android:layout_toStartOf="@+id/choose" android:layout_marginRight="77dp" android:layout_marginEnd="77dp"
            android:layout_toLeftOf="@+id/choose" android:layout_toEndOf="@+id/fab1"
            android:layout_toRightOf="@+id/fab1" android:layout_marginLeft="96dp"
            android:layout_marginStart="96dp"/>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="69dp"
            android:layout_height="wrap_content"
            android:clickable="true" app:srcCompat="@android:drawable/ic_menu_info_details"
            android:id="@+id/fab1" android:layout_alignParentStart="true"
            android:layout_marginLeft="0dp" android:layout_marginStart="0dp" android:layout_alignParentLeft="true"
            android:layout_marginTop="0dp" android:layout_alignParentTop="true" android:background="@drawable/roundedbutton"
    />

</RelativeLayout>